local getSecrets            = false
local getBrainrotGods       = false

-- ===============================
-- Listas de nomes (Secrets): adicionar tudo que a usu√°ria pediu
-- ===============================
-- allowSecretByName controla se cada Secret √© inclu√≠do na contagem
local allowSecretByName = {
